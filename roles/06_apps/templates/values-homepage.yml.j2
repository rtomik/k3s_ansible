config:
  bookmarks:
    - Developer:
        - Github:
            - abbr: GH
              href: https://github.com/
  services:
    - Infrastructure:
      - Rancher:
          href: https://rancher.{{ domain }}/
          description: Kubernetes Management
          icon: rancher.svg
      - ArgoCD:
          href: https://argocd.{{ domain }}
          description: GitOps CD tool for Kubernetes
          icon: argo.svg
      - Authentik:
          href: https://authentik.{{ domain }}/
          description: SSO Provider
          icon: authentik.svg
      - GitLab:
          href: https://gitlab.{{ domain }}/
          description: Git Repository Manager
          icon: gitlab.svg
      - Longhorn:
          href: https://longhorn.{{ domain }}/
          description: Cloud Native Storage
          icon: longhorn.svg

    - Monitoring:
      - Prometheus:
          href: https://prometheus.{{ domain }}/
          description: Monitoring System
          icon: prometheus.svg
      - Grafana:
          href: https://grafana.{{ domain }}/
          description: Analytics & Monitoring
          icon: grafana.svg
           
    - Media:
      - Jellyfin:
          href: https://jellyfin.{{ domain }}
          description: Media System
          icon: jellyfin.svg

      - Audiobookshelf:
          href: https://audiobookshelf.{{ domain }}
          description: Self-hosted audiobook and podcast server
          icon: bookstack.svg
          widget:
              type: audiobookshelf
              url: https://audiobookshelf.{{ domain }}
    - Apps:
      - Home Assistant:
          href: https://home.{{ domain }}/
          description: Home Automation
          icon: home-assistant.svg  
        
  widgets:
    # show the kubernetes widget, with the cluster summary and individual nodes
    - kubernetes:
        cluster:
          show: true
          cpu: true
          memory: true
          showLabel: true
          label: "cluster"
        nodes:
          show: true
          cpu: true
          memory: true
          showLabel: true
    - search:
        provider: duckduckgo
        target: _blank
    - datetime:
      text_size: xl
      format:
          timeStyle: short
          hourCycle: h23

  kubernetes:
    mode: cluster
  settings:
    title: Homepage

    background:
      image: https://cdnb.artstation.com/p/assets/images/images/006/897/659/large/mikael-gustafsson-wallpaper-mikael-gustafsson.jpg
      blur: sm # sm, md, xl... see https://tailwindcss.com/docs/backdrop-blur
      saturate: 100 # 0, 50, 100... see https://tailwindcss.com/docs/backdrop-saturate
      brightness: 50 # 0, 50, 75... see https://tailwindcss.com/docs/backdrop-brightness
      opacity: 100 # 0-100

    theme: dark
    color: slate
    useEqualHeights: true

    layout:
      Infrastructure:
        icon: mdi-auto-fix-#FFFFFF
      Monitoring:
        icon: mdi-list-status-#FFFFFF
      Media:
        icon: mdi-auto-fix-#FFFFFF
      Media Management:
        icon: mdi-auto-fix-#FFFFFF
        header: true
        style: row
        columns: 4
      Apps:
        icon: mdi-cog-play-#FFFFFF
        header: true
        #style: row
        #columns: 5


# The service account is necessary to allow discovery of other services
serviceAccount:
  create: true
  name: homepage

# This enables the service account to access the necessary resources
enableRbac: true

ingress:
  main:
    enabled: true
    className: traefik
    annotations:
      traefik.ingress.kubernetes.io/router.entrypoints: websecure
      traefik.ingress.kubernetes.io/router.middlewares: default-default-headers@kubernetescrd
    hosts:
      - host: homepage.{{ domain }}
        paths:
          - path: /
            pathType: Prefix
    tls:
      - hosts:
          - homepage.{{ domain }}