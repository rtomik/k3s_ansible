---
services:
  traefik:
    image: traefik:v{{ traefik_version }}
    container_name: traefik
    command:
      - --log.level=INFO
      - --api.insecure=false
      - --providers.docker=true
      - --api.dashboard=false
      - --providers.docker.exposedbydefault=false
      - --entrypoints.web.address=:80
      - --entrypoints.websecure.address=:443
      - --certificatesresolvers.myresolver.acme.httpchallenge=true
      - --certificatesresolvers.myresolver.acme.httpchallenge.entrypoint=web
      - --certificatesresolvers.myresolver.acme.email={{email}}
      - --certificatesresolvers.myresolver.acme.storage=/letsencrypt/acme.json
    ports:
      - 80:80
      - 443:443
    environment:
      - TZ={{ timezone }}
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - ./letsencrypt:/letsencrypt
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.k3s.rule=Host(`traefik.{{ domain }}`)"
      - "traefik.http.routers.k3s.entrypoints=websecure"
      - "traefik.http.routers.k3s.tls.certresolver=myresolver"
      - "traefik.http.services.k3s.loadbalancer.server.port=80"
      - "traefik.http.services.k3s.loadbalancer.server.scheme=http"
      - "traefik.http.services.k3s.loadbalancer.server.url=http://{{ k3s_tailscale_ip }}:80"
    restart: unless-stopped
    networks:
      - web
networks:
  web:
    external: true


    