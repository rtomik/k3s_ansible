---
# default values
# https://artifacthub.io/packages/helm/prometheus-community/prometheus?modal=values

server:
  ingress:
    enabled: true
    ingressClassName: traefik
    annotations:
      traefik.ingress.kubernetes.io/router.entrypoints: websecure
      traefik.ingress.kubernetes.io/router.middlewares: default-default-headers@kubernetescrd
    hosts:
      - prometheus.{{ domain }}
    path: /
    pathType: Prefix

grafana:
  enabled: false